<div class='container '>
<h2><%= @restaurant.name %></h2>

<p>Address: <%= @restaurant.address %></p>
<p>Phone Number: <%= @restaurant.phone_number %></p>
<p>Category: <%= @restaurant.category %></p>

<p><%= link_to 'New Review', new_restaurant_review_path(@restaurant), class: 'btn btn-success' %></p>

<p><%= link_to 'Show Reviews', restaurant_review_path(@restaurant), class: 'btn btn-success' %></p>

<p><%= link_to 'Edit Restaurant', edit_restaurant_path(@restaurant), class: 'btn btn-success' %></p>

<p><%= button_to "Destroy Restaurant", @restaurant, method: :delete, class: 'btn btn-success' %></p>

<p><%= link_to 'Back', restaurants_path %></p>
